<header class="site-header">
    <div class="header-container">
        <div class="logo">
            <a href="/" class="logo-link">
                <span class="logo-text">CritXChange</span>
            </a>
        </div>
        <nav class="main-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="/" class="nav-link <%= typeof title !== 'undefined' && (title === 'Home' || title === 'Home Page') ? 'active' : '' %>">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/about" class="nav-link <%= typeof title !== 'undefined' && (title === 'About' || title === 'About Page') ? 'active' : '' %>">About</a>
                </li>
                <% if (typeof user !== 'undefined' && user) { %>
                    <li class="nav-item">
                        <a href="/dashboard" class="nav-link <%= typeof title !== 'undefined' && title === 'Dashboard' ? 'active' : '' %>">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a href="/account" class="nav-link <%= typeof title !== 'undefined' && title === 'Account Administration' ? 'active' : '' %>">Account</a>
                    </li>
                    <li class="nav-item user-menu">
                        <span class="user-name"><%= user.username %></span>
                        <button class="nav-link nav-link-button" id="logoutBtn">Logout</button>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a href="/auth/login" class="nav-link nav-link-button">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/auth/register" class="nav-link nav-link-button-primary">Sign Up</a>
                    </li>
                <% } %>
            </ul>
        </nav>
        <button class="mobile-menu-toggle" aria-label="Toggle menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>
